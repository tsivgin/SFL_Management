@model IEnumerable<SFLOnline.Models.Course>

@{
    ViewBag.Title = "Courses";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Courses</h2>

<p class="text-primary">
    @Html.ActionLink("Create New Course", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Credits)
        </th>
        <th>
            Edit
        </th>
        <th>
            Details
        </th>
        <th>
            Delete
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Credits)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.CourseId }, new { @class = "btn btn-primary" }) 
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.CourseId }, new { @class = "btn btn-warning" }) 
            </td>
            <td>
                @Html.ActionLink("Delete", "Delete", new { id = item.CourseId }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>
