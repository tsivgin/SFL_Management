@model IEnumerable<SFLOnline.Models.Class>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Manage Classes</h2>

<p class="text-primary">
    @Html.ActionLink("Create New Class", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Track Name
        </th>
        <th>
            Class Name
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quota)
        </th>
        <th>
            Number Of Student
        </th>
        <th>
            Edit
        </th>
        <th>
            Details
        </th>
        <th>
            Delete
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Track.TrackName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClassName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quota)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RequiredQuota)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ClassId }, new { @class = "btn btn-primary" })
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.ClassId }, new { @class = "btn btn-warning" })
            </td>
            <td>
                @Html.ActionLink("Delete", "Delete", new { id = item.ClassId }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>
