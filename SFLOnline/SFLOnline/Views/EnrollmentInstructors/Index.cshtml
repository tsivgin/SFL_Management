@model IEnumerable<SFLOnline.Models.EnrollmentInstructor>

@{
    ViewBag.Title = "Enrollment Instructors";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Enrollment Instructors</h2>

<p class="text-primary">
    @Html.ActionLink("Create New Enrollment", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Class Name
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Course.Title)
        </th>
        <th>
            Instructor ID
        </th>
        <th>
            Edit
        </th>
        <th>
            Details
        </th>
        <th>
            Delete
        </th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Class.ClassName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Course.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.InstructorId)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-primary" })
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-warning" })
        </td>
        <td>
            @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
        </td>
    </tr>
    }

</table>
