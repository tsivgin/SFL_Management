@model IEnumerable<SFLOnline.Models.Track>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Tracks</h2>

<p class="text-primary">
    @Html.ActionLink("Create New Track", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TrackName)
        </th>
        <th>
            Edit
        </th>
        <th>
            Details
        </th>
        <th>
            Delete
        </th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TrackName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.TrackId }, new { @class = "btn btn-primary" })
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id = item.TrackId }, new { @class = "btn btn-warning" })
        </td>
        <td>
            @Html.ActionLink("Delete", "Delete", new { id = item.TrackId }, new { @class = "btn btn-danger" })
        </td>
    </tr>
    }

</table>
